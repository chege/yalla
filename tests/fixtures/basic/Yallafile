title = "This is a demo top level title"

# A) Top-level leaf (has cmd, no children)
[stop]
description = "Stop local services"
cmd = "docker compose down"

# B) Explicit parent (has description, no cmd) + children (leaves)
[tools]
description = "Developer tooling"

[tools.fmt]
cmd = "cargo fmt"

[tools.lint]
cmd = "cargo clippy --all-targets --all-features -- -D warnings"

[tools.ls]
cmd = "ls -1"

# C) Parent with cmd AND children
[script]
description = "Project scripts (also runnable)"
cmd = "bash ./scripts/run.sh"

[script.deploy]
cmd = "bash ./scripts/deploy.sh --env=prod"

[script.test]
cmd = "cargo test --all --all-features"

# D) Implicit parent with a single child (no [db] section)
[db.migrate]
cmd = "diesel migration run"

# E) Implicit parent with multiple children (no [ci] section)
[ci.build]
cmd = "cargo build --release"

[ci.test]
cmd = "cargo test --workspace"

# F) Deep nesting via implicit parents (no [kube] or [kube.dev] sections)
[kube.dev.apply]
cmd = "kubectl apply -k k8s/overlays/dev"

# G) Another realistic leaf under a different namespace (implicit parent)
[git.status]
cmd = "git rev-parse --is-inside-work-tree"
